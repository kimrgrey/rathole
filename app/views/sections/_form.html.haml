= form_for [:user, section], html: {class: 'form-horizontal'} do |f|
  = render partial: 'shared/errors', locals: { model: section }
  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control', placeholder: t('.placeholders.name')
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit t('.save'), class: 'btn btn-primary'
      = link_to t('.cancel'), user_path, class: 'btn btn-default'
      = link_to t('.delete'), user_section_path(section), class: 'btn btn-danger pull-right', method: 'delete' if params[:action] == 'edit' && section.without_posts?
.clearfix