- unless user_signed_in?
  .user-links
    = link_to t('nav.sign_in'), new_user_session_path, class: 'sign-in'  
    = link_to t('nav.sign_up'), new_user_registration_path, class: 'sign-up'

%h2
  %a{id: 'comments', href: '#comments'}= t('.comments')

#comments-list
  - @comments.each do |comment|
    .comment
      .row.header
        .col-md-12
          %span.badge.pull-right= icon 'calendar', l(comment.created_at)
          %span.badge.pull-right
            = public_comment_link(comment)
          %span.badge.pull-right
            %a{href: public_profile_path(comment.user)}= icon 'user', comment.user_name
      .row.body  
        .col-md-3.col-sm-4.hidden-xs
          = image_tag comment.user_avatar_url(:thumb), class: 'avatar'
        .col-md-9.col-sm-8 
          - cache comment_cache_key(comment) do
            = sanitize(comment.body_html)


- if user_signed_in?
  = form_tag create_comment_path(post), id: 'comments-form', class: 'form-horizontal' do
    .form-group
      .col-sm-12
        = text_area_tag :body, '', rows: 15, class: 'form-control', placeholder: t('.placeholders.body')
    .form-group
      .col-sm-12
        = submit_tag t('.save'), class: 'btn btn-primary'
- else
  .greeting
    = t('.sign_in_to_comment')

