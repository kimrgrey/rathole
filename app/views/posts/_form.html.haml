= form_for @post, html: {class: 'form-horizontal'} do |f|
  .form-group
    = f.label :title, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :title, class: 'form-control', placeholder: 'What headline will be in your post?'
  .form-group
    = f.label :body, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :body, rows: 50, class: 'form-control', placeholder: 'What text will be in your post?'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', class: 'btn btn-primary'
      = link_to 'Cancel', posts_path, class: 'btn btn-default'
      = link_to 'Delete', post_path(post), class: 'btn btn-danger pull-right', method: 'delete' if params[:action] == 'edit'
.clearfix