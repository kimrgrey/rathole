.profile.dropdown
  %a.dropdown-toggle{href: '#', data: {toggle: "dropdown"}} 
    = current_user.user_name
  %ul.dropdown-menu
    %li
      %a{href: user_path}= icon 'user', t('nav.profile.account')
    %li.divider
    %li
      %a{href: destroy_user_session_path, data: {method: 'delete'}}= icon 'sign-out', t('nav.profile.logout')