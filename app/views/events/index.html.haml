= content_for :nav do
  = render partial: 'public/nav', locals: { user: current_user }
  = render partial: 'users/my', locals: { user: @user }
  
#events.container
  = page_header
  = render partial: 'events/filter'

  - if @events.any?
    #events-list
      - @events.each do |event|
        = render partial: event.type.underscore, locals: { event: event }
        .clearfix
  - else
    = render partial: 'events/greeting'

= paginate @events