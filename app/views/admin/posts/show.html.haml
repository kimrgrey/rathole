= content_for :title, @post.title
= content_for :nav do
  = render partial: 'users/my', locals: { user: current_user }

= content_for :actions do
  = post_on_main_link(@post) if @post.published?
  = link_to icon('times'), admin_post_path(@post), method: 'delete'

= render partial: 'posts/post', locals: {post: @post, preview: false }