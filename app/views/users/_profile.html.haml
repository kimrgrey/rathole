= render partial: 'users/avatar', locals: { user: user }   
= render partial: 'users/info', locals: { user: user }
= render partial: 'users/sections', locals: { user: user, editable: true }
- if @posts.any?
  = render partial: 'posts/list', locals: { posts: @posts, preview: true }
- else
  = render partial: 'users/import_greeting'